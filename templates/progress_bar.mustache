{{!
    @template format_etask/progress_bar

    This template renders a simple progress bar.

    Example context (json):
    {
        "progressValue": 50,
        "progressState": "Completed"
    }
}}

<div class="progress bg-white border">
    <div class="progress-bar bar" role="progressbar" aria-valuenow="{{progressValue}}" style="width: {{progressValue}}%" aria-valuemin="0" aria-valuemax="100"></div>
</div>
<div class="small">
    <div class="d-flex justify-content-between">
        <div>{{progressState}}</div>
        <div>{{progressValue}} %</div>
    </div>
</div>
